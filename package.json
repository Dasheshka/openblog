{
  "name": "writeup",
  "type": "module",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/blueambr/openblog"
  },
  "scripts": {
    "svg:optimize": "svgo -f ./src/assets/svg -o ./src/assets/svg",
    "svg:sprite": "svg-sprite --config ./svg-sprite.config.json ./src/assets/svg/*.svg",
    "svg": "npm run svg:optimize && npm run svg:sprite",
    "dev": "npm run svg && astro dev --host",
    "sync": "astro sync",
    "build": "npm run svg && node ./node/webmanifest.mjs && astro build",
    "format": "prettier --write ./**/*.{css,astro,js,jsx,ts,tsx,cjs,mjs,md,mdoc,mdx,json,yaml}",
    "lint": "eslint ./",
    "pre-commit": "lint-staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{css,astro,js,jsx,ts,tsx,cjs,mjs,md,mdx,mdoc,json,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@astrojs/markdoc": "^0.11.0",
    "@astrojs/react": "^3.3.1",
    "@astrojs/rss": "4.0.5",
    "@astrojs/sitemap": "^3.1.4",
    "@astrojs/vercel": "^7.5.4",
    "@keystatic/astro": "^5.0.0",
    "@keystatic/core": "^0.5.13",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "astro": "4.7.0",
    "astro-pagefind": "^1.5.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@astrojs/tailwind": "5.1.0",
    "@tailwindcss/typography": "0.5.12",
    "@typescript-eslint/parser": "^6.21.0",
    "clsx": "2.1.1",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^0.34.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-config-standard": "^7.0.0",
    "prettier-plugin-astro": "^0.13.0",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "svg-sprite": "^2.0.4",
    "svgo": "^3.2.0",
    "tailwindcss": "3.4.3",
    "typescript": "^5.4.5"
  }
}
