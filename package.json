{
  "name": "openblog",
  "type": "module",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/blueambr/openblog"
  },
  "bugs": {
    "url": "https://github.com/blueambr/openblog/issues"
  },
  "scripts": {
    "dev": "astro dev --host 127.0.0.1",
    "start": "astro dev --host 127.0.0.1",
    "build": "astro build",
    "sync": "astro sync",
    "preview": "astro preview",
    "postbuild": "pagefind --site dist",
    "format:check": "prettier --check ./**/*.{css,astro,js,jsx,ts,tsx,cjs,mjs,md,mdx,mdoc,json,yaml}",
    "format": "prettier --write ./**/*.{css,astro,js,jsx,ts,tsx,cjs,mjs,md,mdx,mdoc,json,yaml}",
    "lint": "eslint .",
    "pre-commit": "lint-staged",
    "prepare": "husky install"
  },
  "dependencies": {
    "@astrojs/markdoc": "^0.9.0",
    "@astrojs/react": "^3.0.10",
    "@astrojs/rss": "4.0.1",
    "@astrojs/sitemap": "^3.0.5",
    "@keystatic/astro": "^3.0.2",
    "@keystatic/core": "^0.3.19",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "astro": "4.0.8",
    "astro-font": "^0.0.72",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@astrojs/tailwind": "5.1.0",
    "@pagefind/default-ui": "^1.0.4",
    "@tailwindcss/typography": "0.5.10",
    "@typescript-eslint/parser": "^6.16.0",
    "clsx": "2.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-astro": "^0.31.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "mdast-util-to-string": "^4.0.0",
    "motion": "^10.16.4",
    "pagefind": "^1.0.3",
    "prettier": "^3.0.3",
    "prettier-config-standard": "^7.0.0",
    "prettier-plugin-astro": "^0.12.0",
    "reading-time": "^1.5.0",
    "slugify": "^1.6.6",
    "tailwind-merge": "2.0.0",
    "tailwindcss": "3.3.5",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "./**/*.{css,astro,js,jsx,ts,tsx,cjs,mjs,md,mdx,mdoc,json,yaml}": [
      "prettier --write"
    ]
  }
}
