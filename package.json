{
  "name": "openblog",
  "type": "module",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/blueambr/openblog"
  },
  "scripts": {
    "svg:optimize": "svgo -f ./src/assets/svg -o ./src/assets/svg",
    "svg:sprite": "svg-sprite --config ./svg-sprite.config.json ./src/assets/svg/*.svg",
    "svg": "pnpm svg:optimize && pnpm svg:sprite",
    "dev": "pnpm svg && astro dev",
    "sync": "astro sync",
    "build": "pnpm svg && astro build",
    "postbuild": "pagefind --site dist",
    "preview": "pnpm svg && astro --config ./astro.config.preview.mjs build && pnpm postbuild && astro --config ./astro.config.preview.mjs preview",
    "format": "prettier --write ./**/*.{css,astro,js,jsx,ts,tsx,cjs,mjs,md,mdx,mdoc,json,yaml}",
    "lint": "eslint ./",
    "pre-commit": "lint-staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{css,astro,js,jsx,ts,tsx,cjs,mjs,md,mdx,mdoc,json,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@astrojs/markdoc": "^0.9.0",
    "@astrojs/react": "^3.0.10",
    "@astrojs/rss": "4.0.1",
    "@astrojs/sitemap": "^3.0.5",
    "@keystatic/astro": "^5.0.0",
    "@keystatic/core": "^0.5.3",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "astro": "4.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@astrojs/tailwind": "5.1.0",
    "@pagefind/default-ui": "^1.0.4",
    "@tailwindcss/typography": "0.5.10",
    "@typescript-eslint/parser": "^6.16.0",
    "clsx": "2.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-astro": "^0.31.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "mdast-util-to-string": "^4.0.0",
    "motion": "^10.16.4",
    "pagefind": "^1.0.4",
    "prettier": "^3.0.3",
    "prettier-config-standard": "^7.0.0",
    "prettier-plugin-astro": "^0.12.0",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "reading-time": "^1.5.0",
    "slugify": "^1.6.6",
    "svg-sprite": "^2.0.2",
    "svgo": "^3.2.0",
    "tailwind-merge": "2.0.0",
    "tailwindcss": "3.3.5",
    "typescript": "^5.2.2"
  }
}
