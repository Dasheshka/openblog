{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/data/*": ["src/data/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/lib/*": ["src/lib/*"],
      "@/styles/*": ["src/styles/*"],
      "@/site-config": ["src/data/site.config.ts"],
      "@/utils": ["src/utils/index.ts"]
    }
  },
  "exclude": [".vscode", "dist", "node_modules"]
}
